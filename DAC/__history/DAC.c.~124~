#include <DAC.h>

#INT_DMA0
void  dma0_isr(void) 
{

}

#INT_SPI1
void  spi1_isr(void) 
{
      printf("TRANSFER COMPLETE\n\r");
}

void main()
{
   setup_spi(SPI_MASTER | SPI_XMIT_L_TO_H | SPI_SAMPLE_AT_MIDDLE | SPI_SCK_IDLE_LOW | SPI_MODE_8B | SPI_SS_DISABLED);
   output_high(CS);
    unsigned int16 i = 0;
   int1 flag = 1;
   printf("Started Started Started\n\r");
//!   enable_interrupts(INT_DMA0);
//!   enable_interrupts(INT_SPI1);
//!   enable_interrupts(INTR_GLOBAL);
   while(TRUE)
   {
      printf("press any key to initiate SPI transfer\n\r");
      getc();
      while(i <=5000)
      {
         if(flag)
         {
                 output_low(CS);
                  SPI_WRITE(Table[i]);
                  SPI_WRITE(Table[i+1]);
                   SPI_WRITE(Table[i] & 0x0F);
                   output_high(CS);
                   flag = 0;
          }
         else
         {
                Output_low(CS);
                SPI_WRITE(0x80);
                SPI_WRITE(Table[i] >> 8);
                SPI_WRITE(Table[i] & 0x00FF);
                output_high(CS);
         }
         getc();
         i++;
      }
      printf("DONE\n\r");
      flag = 1;
      i = 0;
   }

}
